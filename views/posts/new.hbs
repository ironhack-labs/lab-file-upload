<form action="/new" method="POST" enctype="multipart/form-data">
    <label>Picture</label>
    <input type="file" name="imgPost" accept="image/*" class="form-control">
    <br><br>
    <label>Name Picture</label>
    <input type="text" name="picName" class="form-control">
    <br><br>
    <label>Content</label>
    <input type="text" name="content" class="form-control">
    <br><br>
    <div class="btn-group">
    <button class="btn btn-info" type="submit">Create Post</button>
    <a href="/" class="btn btn-primary">Return</a>
    </div>
</form>