<form action="/edit/{{_id}}" method="POST"  enctype="multipart/form-data">
    <label>New Picture</label>
    <input type="file" name="imgPost" accept="image/*" class="form-control">
    <br><br>
    <label>New Name Picture</label>
    <input type="text" name="picName" value="{{picName}}" class="form-control">
    <br><br>
    <label>Content</label>
    <input type="text" name="content" value="{{content}}" class="form-control">
    <br><br>
    <div class="btn-group">
    <button class="btn btn-success" type="submit">Update Post</button>
    <a class="btn btn-info" href="/">Return</a>
    </div>
</form>