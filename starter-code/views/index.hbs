<div class="row">
	<div class="col-xs-12">
		<header class="header">
			<h2 class="header-title">Welcome to {{title}}</h2>
			<div class="header-greeting">
			{{#if user}}
				<div class="profile-pic">
					<img src="/uploads/users/{{ user.profilePic }}" alt="{{user.username}}">
				</div>
				<div class="profile-name">
					<p> Hello, <span>{{ user.username }}</span>! </p>
				</div>
			{{/if}}
			</div>
		</header>
	</div>
</div>

<div class="row">
	<div class="posts-wrapper">
		{{#each posts}}
			{{> post this}}
		{{else}}
			<div class="col-xs-12">
			<div class="alert alert-info">
				<p>There are no posts yet! :(</p>
			</div>
			</div>
		{{/each}}
	</div>
</div>
