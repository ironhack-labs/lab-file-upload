<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
</head>

<body>
  <h1>Welcome to IronTumblr</h1>
  <div class="container">
    <div class="row">
      {{#each posts}}
      <div class="col-md-4">

        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{picPath}}" alt="{{picName}}">
          <div class="card-body">
            <h5 class="card-title">{{picName}}</h5>
            <p class="card-text">{{content}}</p>
            <a href="/post-details/{{_id}}" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>

      {{/each}}
    </div>

  </div>
</body>

</html>