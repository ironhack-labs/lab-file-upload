<section>
  <h2>Upload your photo</h2>
  <form action="/create" method="post" enctype="multipart/form-data" id="postform">
    <label for="content">Title</label><input type="text" name="content">
    <textarea rows="4" cols="50" name="contentText" form="postform"></textarea>
    <label for="filename">File Name</label><input type="text" name="filename">
    <input type="file" name="photo">
    <input type="submit" value="Save">
  </form>
</section>