<div class="row">
	<div class="col-xs-12">
		<header class="header">
			<h2 class="header-title">The posts of <span>"{{username}}"</span></h2>
		</header>
	</div>
</div>

<div class="row">
	<div class="posts-wrapper">
		{{#each posts}}
			{{> post this}}
		{{else}}
		<div class="col-xs-12">
			<div class="alert alert-info">
				<p>There are no posts yet! :(</p>
			</div>
		</div>
	{{/each}}
</div>
</div>