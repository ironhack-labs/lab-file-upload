<h1><%= message %></h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/comments/new/<%= postId %>" method="post">
        <div class="form-group">
          <label for="content">Post Id: <%= postId %></label>
        </div>
        <div class="form-group">
          <label for="content">Comment</label>
          <input id="content" type="text" name="content" class="form-control">
        </div>
        <div class="form-group">
          <input type="file" name="photo" class="form-control">
        </div>
        <button>Add comment</button>
      </form>
    </div>
  </div>
</div>
