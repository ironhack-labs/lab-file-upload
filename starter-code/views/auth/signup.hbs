<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">
  <div class="form-group">
    <label for="username">Username</label>
    <input id="username" type="text" name="username" placeholder="Username" class="form-control">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input id="password" type="password" name="password" class="form-control" placeholder="Password">
  </div>
  <div class="form-group custom-file">
    <label for="photo" class="custom-file-label">Profile Picture</label>
    <input id="photo" type="file" name="photo" class="form-control custom-file-input">
  </div>

  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button type="submit" class="btn btn-primary">Create account</button>

  <p class="account-message">
    Do you already have an account?
  <a class="customLink"href="/auth/login">Login</a>
  </p>
</form>