<div class="form col-md-6 m-auto">
  <form action="/login" method="post">
    <h1><i class="fas fa-sign-in-alt mr-3" style="color:#00b7ff;"></i>Login</h1>
    {{!-- <div class="form-group"> --}}
    <label class="mb-0 mt-2" for="email">Email</label>
    <input type="email" name="email" class="form-control">
    {{!-- </div> --}}

    {{!-- <div class="form-group"> --}}
    <label class="mb-0 mt-2" for="password">Password</label>
    <input type="password" name="password" class="form-control" placeholder="**********">
    {{!-- </div> --}}

    <button class="btn btn-primary mt-3 mb-2" type="submit">Login</button>

    <p>
      Don't have an account?
      <a href="/signup">Sign up</a>
    </p>
  </form>
  {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}
  {{!-- </div>
  </div> --}}
</div>

