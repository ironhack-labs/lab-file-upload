<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Nuevo Post</h1>
        </div>

        <div class="col-md-6">

            <form action="/posts/new" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name-input">Contenido</label>
                    <input name="content" type="text" class="form-control" id="name-input">
                </div>
                <div class="form-group">
                    <label for='input1'>Foto:</label>
                    <input name='picPath' type='file' id='input1'></div>
                <div class="form-group">
                    <label for="name-input2">Nombre de la imagen: </label>
                    <input name="picName" type="text" class="form-control" id="name-input2">
                </div>

                <button type="submit" class="btn btn-dark">Crear un post</button>
                <a href="/posts" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>