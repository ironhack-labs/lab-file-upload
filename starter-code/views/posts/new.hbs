
      <form action="/new" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label for="content">Escribe el contenido de tu post:</label>
          <input type="text" name="content" class="form-control">
        </div>

        <div class="form-group">
          <label for="picPath">Sube una foto a tu post:</label>
          <input type="file" name="picPath">
        </div>

        <div class="form-group"></div>
          <label for="picName">Nombre de la foto:</label>
          <input type="text" name="picName" class="form-control">
        </div>

        <button type="submit">Crear</button>
        
      </form>