<div class="container">
  <div class="row">
    {{ message }}
    <div class="col-sm-6 centered-form">
      <form action="/new" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="image">Upload the image</label>
          <input type="file" name="image">    
        </div>
        <div class="form-group">
          <label for="content">Your comments</label>
          <textarea type="text" name="content" placeholder="Write your comments..." class="form-control"></textarea>
        </div>

        <button type="submit">Post it!</button>
      </form>
    </div>
  </div>
</div>