<h1>New Post</h1>
<form id="form" action="/posts/new/<%= userId %>" method="POST">

  <textarea id="content" name="content" rows="10" cols=""></textarea>
    <% if (typeof(errorMessage) != "undefined") { %>
      <div class="error-message"> <%= errorMessage %> </div>
    <% } %>
    <br>
  <button type="submit">Save post</button>

</form>