<div class="posts-container">
    {{#each posts}}
    <div class="comments-container">
        <h3>{{this.picName}}</h3> <!--this es posts-->
        <img src="{{this.picPath}}"> <!--url de la foto-->
        <p>{{this.content}}</p>
    </div>
    <hr>
    <div class="comments-container">
        {{#each this.comments}} <!--this es posts-->
        <img src="{{this.imagePath}}">
        <p>{{this.content}}</p>
        {{/each}}
    </div>

    <div class="comment-container">
    <form class="comment" method="POST" action="/posts/add-comment/{{this._id}}" enctype="multipart/form-data"> 
        <label for="content">Comment:</label> <!--El for sirve para que tambiÃ©n puedas clicar como si fuese el input-->
        <textarea name="content" placeholder="message"></textarea>
    
        <label for="photo">Upload Image</label>
        <input type="file" name="photo">

        <button>Send Comment</button>
    </form>
    </div>
    {{/each}}
</div>