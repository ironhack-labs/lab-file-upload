<h1>Welcome to IronTumblr</h1>
<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
    {{#each posts}}
    <div class="col mb-4">
      <div class="card card-list">
        <a href="/post/{{id}}">
        <img src="{{imgPath}}" class="card-img-top" alt="Post" width="100px">
        <div class="card-body">
          <p class="card-text">Created by: {{creatorId.username}}</p>
          <p class="card-text">Created on: {{created}}</p>
          <p class="card-text">{{content}}</p>
        </div>
        </a>
      </div>
    </div>
    {{else}}
    <p>There are no posts yet! :(</p>
    {{/each}}
  </div>
</div>