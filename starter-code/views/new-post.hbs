<h1>Create new post</h1> <hr>
<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/post/new-post" method="post" enctype="multipart/form-data" >
        <div class="form-group">
          <label for="content">Content</label>
          <input type="text" name="content" class="content">
        </div>

        <div class="form-group">
          <label for="image-name">Image name</label>
          <input type="text" name="picName" class="image-name">
        </div>
        <div>
          <label>Foto de post</label>
          <input type="file" name="photo"><br><br>
        </div>

        <button type="submit">Post</button>
      </form>
    </div>
  </div>
</div>